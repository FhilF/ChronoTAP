<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/attendanceitem"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="5dp">
    <!---->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <TextView
                    android:layout_alignParentLeft="true"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TxtWorkdate"
                    android:text="Workdate"/>


                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TxtLeave"
                    android:text="Leave"
                    />


            <LinearLayout
                android:id="@+id/xLinearDateInfo"
                android:layout_below="@id/TxtWorkdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/xRelTimeIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street">
                    <TextView
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="Time In:"
                        android:id="@+id/xTimein"/>
                    <TextView
                        android:textColor="@color/colorWhite"
                        android:layout_below="@id/xTimein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="Time Out:"/>
                </RelativeLayout>



            </LinearLayout>


            <LinearLayout

                android:layout_marginLeft="15dp"
                android:id="@+id/LinearDateInfo"
                android:layout_toRightOf="@id/xLinearDateInfo"
                android:layout_below="@id/TxtWorkdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/RelTimeIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street">
                    <TextView
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text=""
                        android:id="@+id/TxtTimeIn"/>
                    <TextView
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:layout_below="@id/TxtTimeIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:id="@+id/TxtTimeOut"/>
                </RelativeLayout>



            </LinearLayout>


        <RelativeLayout
            android:layout_below="@id/LinearDateInfo"
            android:id="@+id/dialogYesTimeOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>


            <RelativeLayout
                android:layout_below="@id/dialogYesTimeOut"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#50ffffff"></RelativeLayout>
        </RelativeLayout>
</LinearLayout>